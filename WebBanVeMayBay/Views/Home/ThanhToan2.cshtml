
@{
    ViewBag.Title = "ThanhToan2";
}
<!DOCTYPE html>
<html lang="vi" class="h-100">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.min.css" type="text/css">
    <!-- Font awesome -->
    <link rel="stylesheet" href="~/vendor/font-awesome/css/font-awesome.min.css" type="text/css">

    <!-- Custom css - Các file css do chúng ta tự viết -->
    <link rel="stylesheet" href="~/assets/css/app.css" type="text/css">
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/shape-circle.css' rel='stylesheet'>
</head>

<body>
    <main role="main">
        <!-- Block content - Đục lỗ trên giao diện bố cục chung, đặt tên là `content` -->
        <div class="container mt-4">
            <form class="needs-validation" action="~/Home/ThemVMB" method="post">
                <div class="py-5 text-center">
                    <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
                    <h2>Thanh toán</h2>
                    <p class="lead">Vui lòng kiểm tra thông tin Khách hàng, thông tin chuyến bay trước khi Đặt hàng.</p>
                </div>
                <div class="row">
                    <div class="col-md-4 order-md-2 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Chuyến bay</span>
                            <input type="hidden" name="MaCB" value="@ViewBag.list3[0][0]">
                            <input type="hidden" name="HTTT" value="Chưa thanh toán">
                            <span class="badge badge-secondary badge-pill">@ViewBag.list3[0][9]</span>
                            <span class="badge badge-secondary badge-pill"><a href="~/Home/ChiTietChuyenBay?id=@ViewBag.list3[0][0]">chi tiết</a></span>
                        </h4>
                        <ul class="list-group mb-3">
                            <li class="list-group-item d-flex justify-content-between lh-condensed">
                                <div>
                                    <h6 class="my-0">
                                        @ViewBag.list3[0][7]
                                        <i class="fa-solid fa-minus"></i>
                                        <i class="fa-solid fa-minus"></i>
                                        <i class="fa-solid fa-plane"></i>
                                        @ViewBag.list3[0][8]
                                    </h6>
                                    <small class="text-muted"><i class="fa-regular fa-circle"></i> Khởi hành lúc: @ViewBag.list3[0][2]</small></br>
                                    <small class="text-muted"><i class="fa-solid fa-minus fa-rotate-90 fa-xs"></i></small></br>
                                    <small class="text-muted"><i class="fa-solid fa-minus fa-rotate-90 fa-xs"></i></small></br>
                                    <small class="text-muted"><i class="fa-solid fa-circle"></i> Đến nói lúc: @ViewBag.list3[0][3]</small></br>
                                </div>
                                <span class="text-muted">@ViewBag.list3[0][5]$ </span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Tổng thành tiền</span>
                                <strong>@ViewBag.list3[0][5]$</strong>
                            </li>
                        </ul>


                    </div>
                    <div class="col-md-8 order-md-1">
                        <h4 class="mb-3">Thông tin khách hàng</h4>
                        @foreach (var a in ViewBag.list)
                        {
                            <input type="hidden" name="MaKH" value="@a[0]">
                            <div class="row">
                                <div class="col-md-12">
                                    <label for="kh_ten">Họ tên</label>
                                    <input type="text" class="form-control" name="kh_ten" id="kh_ten"
                                           value="@a[1]" readonly="">
                                </div>
                                <div class="col-md-12">
                                    <label for="kh_gioitinh">Giới tính</label>
                                    <input type="text" class="form-control" name="kh_gioitinh" id="kh_gioitinh" value="@a[5]"
                                           readonly="">
                                </div>
                                <div class="col-md-12">
                                    <label for="kh_dienthoai">Điện thoại</label>
                                    <input type="text" class="form-control" name="kh_dienthoai" id="kh_dienthoai"
                                           value="+84 @a[3]" readonly="">
                                </div>
                                <div class="col-md-12">
                                    <label for="kh_email">Email</label>
                                    <input type="text" class="form-control" name="kh_email" id="kh_email"
                                           value="@a[2]" readonly="">
                                </div>
                                <div class="col-md-12">
                                    <label for="kh_ngaysinh">Ngày sinh</label>
                                    <input type="text" class="form-control" name="kh_ngaysinh" id="kh_ngaysinh"
                                           value="@a[6]" readonly="">
                                </div>
                                <div class="col-md-12">
                                    <label for="kh_cmnd">Quốc tịch</label>
                                    <input type="text" class="form-control" name="kh_cmnd" id="kh_cmnd" value="@a[4]" readonly="">
                                </div>
                            </div>
                        }
                        <h4 class="mb-3">Hình thức thanh toán</h4>

                        <div class="d-block my-3">
                            <div class="custom-control custom-radio">
                                <input id="httt-1" type="radio" name="h2"class="custom-control-input" required=""
                                       value="1">
                                <label class="custom-control-label" for="httt-1">Tiền mặt (vui lòng thanh toán tại các điểm giao dịch của Traveler)</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="httt-2"  type="radio" name="h2"class="custom-control-input" required=""
                                       value="2">
                                <label class="custom-control-label" for="httt-2">Chuyển khoản</label>
                            </div>
                        </div>
                        <hr class="mb-4">
                    </div>
                </div>
                <button class="btn btn-primary btn-lg btn-block" type="submit">
                    Đặt vé
                </button>
            </form>

        </div>
        <!-- End block content -->
    </main>
    <!-- Optional JavaScript -->
    
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/popperjs/popper.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Custom script - Các file js do mình tự viết -->
    <script src="~/assets/js/app.js"></script>
    <script src="https://kit.fontawesome.com/50e764e198.js" crossorigin="anonymous"></script>

</body>

</html>