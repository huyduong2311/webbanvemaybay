
@{
    ViewBag.Title = "ThanhToan3";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đặt hàng thành công</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .success-container {
            text-align: center;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .success-icon {
            font-size: 60px;
            color: #28a745;
        }

        .success-heading {
            color: #28a745;
            margin-top: 10px;
            margin-bottom: 20px;
        }

        .success-message {
            color: #333;
            margin-bottom: 30px;
        }

        .home-link {
            text-decoration: none;
            background-color: #28a745;
            color: #ffffff;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .home-link:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="success-icon">&#10003;</div>
        <h2 class="success-heading">Đặt hàng thành công!</h2>
        <p class="success-message">Cảm ơn bạn đã mua hàng. Quý khách vui lòng đến các điểm giao dịch để thanh toán trong 24h và nhận vé.</p>
        <a href="~/Home/Index" class="home-link">Quay lại trang chủ</a>
    </div>
</body>
</html>
